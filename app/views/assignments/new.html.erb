<h1>Create Assignment</h1>
<form action="/assignments" method="post">
	<div class="form-group">
		<label>Enter Assignment Name:</label>
		<input type="text" name="assignment[assignmentname]" class="form-control">
	</div>
	<div class="form-group">
		<label>Enter Total Points:</label>
		<input type="text" name="assignment[totalpoints]" class="form-control">
	</div>
	<input type="submit" value="Create" class="btn btn-primary">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<%end%>