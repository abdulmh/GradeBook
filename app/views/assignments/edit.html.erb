<h1> Edit <%= @assignment.assignmentname %></h1>
<form action="/assignments/<%= @assignment.id %>" method="post">
	<div class="form-group">
		<label>Assignment Name:</label>
		<input type="text" name="assignment[assignmentname]" value="<%= @assignment.assignmentname %>" class="form-control">
	</div>
	<div>
		<label>Total Points:</label>
		<input type="text" name="assignment[totalpoints]" value="<%= @assignment.totalpoints %>" class="form-control">
	</div>
	<input type="submit" value="Update" class="btn btn-primary">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div><%= e %></div>
	<% end %>
<%end%>